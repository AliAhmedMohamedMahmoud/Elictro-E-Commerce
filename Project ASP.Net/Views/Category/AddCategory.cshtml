
@{
    ViewData["Title"] = "AddCategory";
    Layout = "_AddCategory";
}

@model Category;



        <form method="post" asp-action="SaveAddCategory" asp-controller="Category"  style="margin:15px" enctype="multipart/form-data">
            <span class="contact1-form-title">
					Add Category
			</span>
            <div style="margin-bottom:15px">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="input1" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div style="margin-bottom:15px">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="input1" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div style="margin-bottom:15px">
                <label asp-for="picture"></label>
                <input asp-for="picture" type="file"/>
                <span asp-validation-for="picture" class="text-danger"></span>
            </div>
            <div class="container-contact1-form-btn">
					<button class="contact1-form-btn">
						<span>
							Add
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
            
        </form>


