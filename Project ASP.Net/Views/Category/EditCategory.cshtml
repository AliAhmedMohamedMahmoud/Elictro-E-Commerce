@model Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "_EditCategory";
}

<form method="post" asp-action="SaveEditCategory" asp-controller="Category" >
            <span class="contact1-form-title">
					Edit Category
			</span>
            <div style="margin-bottom:15px">
                <label asp-for="Name"></label>
                <input asp-for="Name" value="@Model.Name"  class="input1" />
            </div>
            <div style="margin-bottom:15px">
                <label asp-for="Description"></label>
                <input asp-for="Description" value="@Model.Description" class="input1" />
            </div>
            <div style="margin-bottom:15px">
                <label asp-for="picture"></label>
                <input asp-for="picture" value="@Model.picture" class="input1" />
            </div>
            <div class="container-contact1-form-btn">
					<button class="contact1-form-btn">
						<span>
							Edit
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
            
        </form>

